# Sample gitconfig
#

[hub]
        protocol = https
[user]
        name = Alex Vallejo
        email = vallejo.alex@gmail.com
[credential]
        helper = GIT_CREDENTIAL_HELPER
[alias]
        cm = commit -m
        co = checkout
        p = pull
[color]
        diff = auto
        status = auto
        branch = auto
        ui = true
[core]
        excludesfile = C:/dev/.gitignore
        editor = vim
[apply]
        whitespace = nowarn
[mergetool]
        keepBackup = false
[difftool]
        prompt = false
[help]
        autocorrect = 1
[push]
        # See `git help config` (search for push.default)
        # for more information on different options of the below setting.
        #
        # Setting to git 2.0 default to surpress warning message
        default = simple
